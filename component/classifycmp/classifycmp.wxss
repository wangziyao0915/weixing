.classifycmp-box{
font-size: 32rpx;
}
.classifycmp-box{
  display: flex;
 
}
.menu{
  white-space: nowrap;
  flex: 1;
}

.option{
  color: #cccccc;
  border: 1px solid #cccccc;
  border-radius: 25px;
  padding: 4rpx 30rpx;
  margin: 0 10rpx;
  font-size: 30rpx;
  display: inline-block;
  margin-bottom:20rpx; 
}
.active{
    color: #edc148;
  border: 1px solid #edc148;
  border-radius: 25px;
  padding: 6rpx 30rpx;
  margin: 0 10rpx;
  font-size: 30rpx;
  display: inline-block;
  margin-bottom:20rpx; 

}
.option-box-up{
  position: relative;
  flex: 6;
  height: 60rpx;
  overflow: hidden;
}
.option-box-down{
   position: relative;
  flex: 6;
  
}
.triangle{
  width: 22rpx;
  height: 22rpx;
  border-right: 1px solid black;
  border-bottom: 1px solid black;
  position: absolute;
  right: 8rpx;
  top: 14rpx;
  
}
.up{
transform: rotate(45deg);
}
.down{
transform: rotate(-135deg)
}