.choiceness {
  font-size: 32rpx;
  background: #ececec;
}

.heard {
  width: 96%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
  background: white;
  padding: 0 20rpx;
}
.heard .title {
  font-size: 44rpx;
}
.heard .option {
  color: #ccc;
}
.all-icon {
  display: flex;
  color: #d81e06;
}
.icon-more {
  margin-left: 30rpx;
}
.active {
  color: black;
  border-bottom: 1px solid #ee5048;
}
.option text {
  display: inline-block;
  height: 80rpx;
  margin: 0 20rpx
}
.swiper image {
  width: 100%;
  height: 260rpx;
}
.swiper {
  height: 260rpx;
}
.section {
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  background: white
}
.section .iconfont {
  border: 1px solid black;
  width: 78rpx;
  height: 78rpx;
  text-align: center;
  line-height: 78rpx;
  border-radius: 50%;
  font-size: 70rpx
}
.section .sectionName {
  color: #999;
  text-align: center;
  margin-top: 10rpx
}
.recommend-title {
  margin-top: 20rpx;
  background: white;
  padding: 0 30rpx;
  display: flex;
  position: relative;
}
.recommend-content {
  width: 100%;
  height: 360rpx;
  background: white;
  padding-left: 30rpx;
}
.recommend-content-swiper image {
  width: 190rpx;
  height: 266rpx;
}
.recommend-content-swiper {
  height: 380rpx;
}
.recommend-item {
  display: flex;
  justify-content: space-between;
}
.recommend-item-all {
  flex: 1;
}
.recommend-item {
  width: 100%;
  height: 600rpx;
}
.recommend-dots {
  display: flex;
  position: absolute;
  top: 40rpx;
  right: 30rpx;
}
.dots {
  width: 10rpx;
  height: 10rpx;
  background: #555;
  margin: 0 10rpx;
  border-radius: 50%;
}
.recommend-bookName {
  width: 190rpx;
  white-space: nowrap;
  overflow: hidden;
}
.bookName {
  text-align: center;
}
.featured {
  padding: 0 40rpx 40rpx 40rpx;
  margin-top: 20rpx;
  background: white
}
.featured-show {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
  padding: 10rpx 10rpx;
  border: 1px solid #bbb;
  border-radius: 20px;
}
.featured-show view {
  padding: 0 30rpx
}
.featured-show-penName {
  color: #bbb;
  font-size: 24rpx;
  line-height: 38rpx
}
.everybody {
  background: white;
  padding: 0 40rpx 40rpx 40rpx;
  margin-top: 20rpx
}
.everybody-content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  text-align: center;
}
.everybody-content image {
  width: 190rpx;
  height: 278rpx;
  border-radius: 5px;
}
.everybody-bookname {
  width: 190rpx;
  white-space: nowrap;
  overflow: hidden;
}
.endBook {
  margin-top: 20rpx;
  background: white;
  padding: 0 40rpx 0 40rpx;
}
.view-more {
  margin-top: -26rpx;
  border-top: 1px solid #999;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: red;
  background: white
}
.endBook-item .line {
  width: 100%;
  height: 4rpx;
  background: #bbb;
  margin: 20rpx 0 20rpx 0;
}
.indexChangeAcive {
  background: yellow;
}
